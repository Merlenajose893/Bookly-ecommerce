<%- include("../../views/partials/adminheader.ejs") %>

<div class="container-scroller">
  <%- include("../../views/partials/adminsidebar") %>

  <div class="container-fluid page-body-wrapper">
    <%- include("../../views/partials/adminheader") %>

    <div class="main-panel">
      <div class="content-wrapper">
        <section class="content-main">
          <div class="row">
            <div class="col-9">
              <div class="content-header">
                <h2 class="content-title">Books List</h2>
                <a href="/admin/addbook" class="btn btn-primary btn-sm float-right">Add New Book</a>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Title</th>
                          <th>Category</th>
                          <th>Price</th>
                          <th>Quantity</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (books && books.length > 0) { %>
                          <% books.forEach((book, index) => { %>
                            <tr>
                              <td><%= index + 1 %></td>
                              <td><%= book.title %></td>
                              <td><%= book.category %></td>
                              <td>$<%= book.salePrice ? book.salePrice : book.regularPrice %></td>
                              <td><%= book.quantity %></td>
                              <td>
                                <a href="/admin/editbook/<%= book._id %>" class="btn btn-sm btn-warning">Edit</a>
                                <form method="POST" action="/admin/deletebook/<%= book._id %>" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this book?')">
                                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                              </td>
                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="6" class="text-center">No books found.</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
          <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© bootstrapdash.com 2020</span>
          <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span>
        </div>
      </footer>
    </div>
  </div>
</div>

<%- include("../partials/adminfooter") %>

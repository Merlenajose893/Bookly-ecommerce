    <script>
        function handleFilterChange() {
            const filterSelect = document.getElementById('dateFilter');
            const customDateRange = document.getElementById('customDateRange');
            
            if (filterSelect.value === 'custom') {
                customDateRange.style.display = 'block';
            } else {
                customDateRange.style.display = 'none';
            }
        }
        
        function exportReport(format) {
            const filter = document.getElementById('dateFilter').value;
            let url = `/admin/sales-report?filter=${filter}&format=${format}`;
            
            if (filter === 'custom') {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                
                if (!startDate || !endDate) {
                    alert('Please select both start and end dates for custom range');
                    return;
                }
                
                url += `&startDate=${startDate}&endDate=${endDate}`;
            }
            
            window.location.href = url;
        }
        
        // Initialize DataTable if you want to add sorting and pagination
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof $.fn.DataTable !== 'undefined') {
                $('#salesTable').DataTable({
                    order: [[5, 'desc']], // Sort by date by default
                    pageLength: 10,
                    responsive: true
                });
            }
        });
        
        // Set initial filter value if it exists in URL params
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const filter = urlParams.get('filter');
            
            if (filter) {
                document.getElementById('dateFilter').value = filter;
                handleFilterChange();
                
                if (filter === 'custom') {
                    const startDate = urlParams.get('startDate');
                    const endDate = urlParams.get('endDate');
                    if (startDate) document.getElementById('startDate').value = startDate;
                    if (endDate) document.getElementById('endDate').value = endDate;
                }
            }
        });
        </script>
        
          


    
    

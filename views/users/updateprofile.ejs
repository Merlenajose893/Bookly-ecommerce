<%- include('../../views/partials/profileHeader.ejs') -%>
<div class="col-md-9 content-section">
    <div class="content-header">
        <h5 class="mb-0">Update Profile</h5>
    </div>
    
    <form id="profileForm" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" required>
            <div class="invalid-feedback">
                Please enter a username
            </div>
        </div>
        
        
        
        <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone" name="phone" required
                   pattern="^[0-9]{10}$">
            <div class="invalid-feedback">
                Please enter a valid 10-digit phone number
            </div>
        </div>
        
        
        
        <button type="submit" class="btn save-btn text-right">Save</button>
    </form>
</div>
</div>


<%- include('../../views/partials/profileFooter.ejs') -%>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<!-- SweetAlert2 JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.4.8/sweetalert2.min.js"></script>

<!-- Validation Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('profileForm');
        
        // Form validation
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
                
                // Show error with SweetAlert2
                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'Please check the form and correct all errors.',
                    confirmButtonColor: '#00847e'
                });
            } else {
                event.preventDefault();
                // Here you would normally submit the form data via AJAX
                
                // Show success with SweetAlert2
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Your profile has been updated successfully.',
                    confirmButtonColor: '#00847e'
                });
            }
            
            form.classList.add('was-validated');
        });
        
        // Real-time validation for phone number
        const phoneInput = document.getElementById('phone');
        phoneInput.addEventListener('input', function() {
            // Remove any non-numeric characters
            this.value = this.value.replace(/[^0-9]/g, '');
            
            // Limit to 10 digits
            if (this.value.length > 10) {
                this.value = this.value.slice(0, 10);
            }
        });
        
        // Real-time validation for name
        const nameInput = document.getElementById('fullName');
        nameInput.addEventListener('input', function() {
            // Remove any characters that aren't letters or spaces
            this.value = this.value.replace(/[^A-Za-z ]/g, '');
        });
    });
</script>
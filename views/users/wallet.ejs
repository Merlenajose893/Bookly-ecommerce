            </ol>
        </nav>
<h1>Bookly</h1>
        <div class="row g-4">
            <!-- Sidebar -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="card">
                    <div class="dashboard-header p-3">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-home me-2"></i>
                            <span class="fw-medium">Dashboard</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column gap-3">


<%- include('../../views/partials/profileHeader.ejs') -%>

            <!-- Main Content -->
            <style>
                .profile-card {
                    border-radius: 15px;
                    box-shadow: 0 0 20px rgba(0,0,0,0.05);
                }
                .profile-icon {
                    width: 45px;
                    height: 45px;
                    background: #e3f2fd;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: #1976d2;
                }
                .info-card {
                    transition: transform 0.2s;
                    cursor: pointer;
                }
                .info-card:hover {
                    transform: translateY(-5px);
                }
                .custom-bg {
                    background-color: #f8f9fa;
                }
            </style>
            <div class="col-12 col-lg-9">
                <div class="card profile-card">
                    <!-- Header Section -->
                    <div class="card-header bg-white border-0 pt-4 pb-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-3">
                                <div class="profile-icon">
                                    <i class="fas fa-user fa-lg"></i>
                                </div>
                                <div>
                                    <h2 class="h4 mb-1">Welcome back, <%= user.name %></h2>
                                    <p class="text-muted mb-0">Manage your account preferences and details</p>
                                </div>
                            </div>
                           
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="card-body">
                        <div class="row g-4">
                            <!-- Contact Information -->
                            <div class="col-md-6">
                                <div class="card info-card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">
                                            <i class="fas fa-address-card text-primary me-2"></i>
                                            Contact Information
                                        </h5>
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="fas fa-envelope text-muted me-3"></i>
                                            <div>
                                                <small class="text-muted d-block">Email Address</small>
                                                <span><%= user.email %></span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-phone text-muted me-3"></i>
                                            <div>
                                                <small class="text-muted d-block">Phone Number</small>
                                                <span><%= user.phone %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Actions -->
                            
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>

        <!-- Newsletter Section -->
        <%- include('../../views/partials/profileFooter.ejs') -%>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>

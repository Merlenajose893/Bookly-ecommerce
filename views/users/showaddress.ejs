<%- include('../../views/partials/profileHeader.ejs') -%>

<div class="col-12 col-md-8 col-lg-9">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="h4 mb-3">Address Details</h2>
            <p class="text-secondary mb-3">
                Below are the saved details of your shipping or billing address.
            </p>

            <!-- Address Details -->
            <% if (address && address.address.length > 0) { %>  <!-- Check if address data exists -->
                <% address.address.forEach(function(addressItem) { %>
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <!-- Check if it's the default address -->
                                <% if (addressItem.isDefault) { %>
                                    <span class="badge bg-success text-white">Default Address</span>
                                <% } else { %>
                                    <span class="badge bg-secondary text-white">Not Default</span>
                                <% } %>
                            </div>
                            <div class="mb-2">
                                <strong class="d-block">Name:</strong>
                                <span><%= addressItem.name %></span>
                            </div>
                            <div class="mb-2">
                                <strong class="d-block">Email:</strong>
                                <span><%= addressItem.email %></span>
                            </div>
                            <div class="mb-2">
                                <strong class="d-block">Phone:</strong>
                                <span><%= addressItem.phone %></span>
                            </div>
                            <div class="mb-2">
                                <strong class="d-block">Address:</strong>
                                <span><%= addressItem.locality %>, <%= addressItem.city %>, <%= addressItem.state %> <%= addressItem.pincode %>, <%= addressItem.country %></span>
                            </div>
                            <div class="mt-3">
                                <a href="/edit-address/<%= addressItem.id %>" class="btn btn-outline-primary btn-sm me-2">Edit</a>
                                <a href="/delete-address/<%= addressItem.id %>" class="btn btn-outline-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No address found.</p>
            <% } %>

            <!-- Add New Address Button -->
            <div class="mt-4">
                <a href="/add-address" class="btn btn-success btn-sm">+ Add New Address</a>
            </div>
        </div>
    </div>
</div>




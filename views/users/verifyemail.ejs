<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify OTP - Bookly</title>
    <link rel="stylesheet" href="/css/login.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      .otp-input {
        width: 200px;
        height: 50px;
        text-align: center;
        font-size: 24px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin: 20px 0;
        letter-spacing: 8px;
      }

      .otp-input:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 0 2px rgba(0,123,255,0.25);
      }

      .timer {
        text-align: center;
        margin: 15px 0;
        color: #666;
      }

      .resend-button {
        background: none;
        border: none;
        color: #007bff;
        cursor: pointer;
        text-decoration: underline;
      }

      .resend-button:disabled {
        color: #666;
        cursor: not-allowed;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <div class="split-screen">
      <div class="left">
        <a href="/login" class="back-arrow">‚Üê</a>
        <div class="left-content">
          <h2>Welcome to Bookly</h2>
          <p>
            Discover millions of eBooks, audiobooks, magazines, and more from our extensive
            collection.
          </p>
        </div>
      </div>
      <div class="right">
        <div class="container">
          <h1>Verify Your Email</h1>
          <p>We have sent a code to your email <strong></strong></p>

          <!-- Handle message conditionally -->
          <% if (typeof message !== 'undefined' && message) { %>
          <script>
            Swal.fire({
              icon: 'error',
              title: 'Oops...',
              text: '<%= message %>',
            });
          </script>
          <% } %>

          <form action="/verifyemail" method="POST">
            <div class="form-group">
              <input 
                type="text" 
                class="otp-input" 
                name="otp"
                maxlength="6" 
                pattern="[0-9]{6}" 
                placeholder="Enter OTP"
                required 
              />
            </div>
            
            <div class="timer">
              Resend Otp in: <span id="countdown">05:00</span>
            </div>

            <button type="submit" class="login-button">Verify Email</button>
          </form>

          <div class="signup-link">
            Didn't receive the code? 
            <form action="/resend-otp" method="POST">
              <button type="submit" class="resend-button">Resend OTP</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      const otpInput = document.querySelector('.otp-input');
      const form = document.querySelector('form');

      // Only allow numbers
      otpInput.addEventListener('input', (e) => {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
      });

      // Timer functionality
      let timeLeft = 60; // 5 minutes in seconds
      const countdownEl = document.querySelector('#countdown');
      const resendButton = document.querySelector('#resendButton');

      function updateTimer() {
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        countdownEl.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        
        if (timeLeft === 0) {
          clearInterval(timerInterval);
          resendButton.disabled = false;
        } else {
          timeLeft--;
        }
      }

      const timerInterval = setInterval(updateTimer, 1000);
      updateTimer();

      // Form submission
      form.addEventListener('submit', function(event) {
        event.preventDefault();
        
        const otp = otpInput.value;

        // Verify OTP length
        if (otp.length !== 6) {
          Swal.fire({
            icon: 'error',
            title: 'Invalid Code',
            text: 'Please enter all 6 digits of the verification code.',
          });
          return;
        }

        // Show success message
        Swal.fire({
          icon: 'success',
          title: 'Verification Successful!',
          text: 'Your email has been verified successfully.',
          showConfirmButton: true,
        }).then((result) => {
          if (result.isConfirmed) {
            this.submit();
          }
        });
      });

      // Handle resend
      resendButton.addEventListener('click', () => {
        // Reset timer
        timeLeft = 60;
        resendButton.disabled = true;
        
        // Clear OTP input
        otpInput.value = '';
        otpInput.focus();

        // Restart countdown
        clearInterval(timerInterval);
        setInterval(updateTimer, 1000);
        
        // Show resend confirmation
        Swal.fire({
          icon: 'success',
          title: 'Code Resent!',
          text: 'A new verification code has been sent to your email.',
          timer: 3000,
          showConfirmButton: false
        });
      });
    </script>
  </body>
</html>
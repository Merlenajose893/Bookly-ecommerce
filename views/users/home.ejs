                    <h5 class="font-weight-semi-bold m-0">Easy Refunds and Returns</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->


    <!-- Categories Start -->
    <!-- Categories Start -->
<!-- Categories Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <% const categories = [
            { name: 'Fictions', image: 'img/cat-1.jpg', count: 15 },
            { name: 'Non-Fictions', image: 'img/cat-2.jpg', count: 15 },
            { name: 'Academics', image: 'img/cat-3.jpg', count: 15 },
            { name: 'Mystery & Thriller', image: 'img/cat-4.jpg', count: 15 },
            { name: 'Science-Fiction & Fantasy', image: 'img/cat-5.jpg', count: 15 },
            { name: 'Comics & Graphic Novels', image: 'img/cat-6.jpg', count: 15 },
        ]; %>
        <% categories.forEach(category => { %>
            <div class="col-lg-4 col-md-6 pb-1">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 20px; height: 300px;"> <!-- Set a fixed height -->
                    <p class="text-right" style="flex-shrink: 0;"><%= category.count %> Books</p>
                    <a href="" class="cat-img position-relative overflow-hidden mb-3" style="flex-grow: 1;">
                        <img class="img-fluid" src="<%= category.image %>" alt="<%= category.name %>" style="height: 150px; object-fit: cover;"> <!-- Limit image height -->
                    </a>
                    <h5 class="font-weight-semi-bold m-0" style="flex-shrink: 0;"><%= category.name %></h5>
                </div>
            </div>
        <% }); %>
    </div>
</div>


    
    <!-- Categories End -->


    <!-- Offer Start -->
    <div class="container-fluid offer pt-5">
        <div class="row px-xl-5">
            <div class="col-md-6 pb-4">
                <div class="position-relative bg-secondary text-center text-md-right text-white mb-2 py-5 px-5">
                    <img src="img/offer-1.png" alt="">
                    <div class="position-relative" style="z-index: 1;">
                        <h5 class="text-uppercase text-primary mb-3">20% off the all order</h5>
                        <h1 class="mb-4 font-weight-semi-bold">Spring Reads</h1>
                        <a href="" class="btn btn-outline-primary py-md-2 px-md-3">Stay Tuned</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Offer End -->


    <!-- Books Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Hot-Picks</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            
            <% books.slice(0, 6).forEach(function(book) { %> <!-- Limit to the first 6 books -->
                <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <% if (book.images && book.images.length > 0) { %>
                                <!-- Display the first image from the 'images' array with appropriate styling -->
                                <img class="img-fluid w-100" src="/uploads/<%= book.images[0].split('/').pop() %>" alt="Book Image">
                            <% } else { %>
                                <!-- Placeholder image if no images are available -->
                                <img class="img-fluid w-100" src="/path/to/placeholder.jpg" alt="Placeholder Image">
                            <% } %>
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3"><%= book.title %></h6>
                            <p><%= book.author %></p>
                            
                            <div class="d-flex justify-content-center">
                                <h6>$<%= book.regularPrice %></h6><h6 class="text-muted ml-2"><del>$<%= book.salesPrice %></del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/book/<%= book._id %>" class="btn btn-sm text-dark p-0">
                                <i class="fas fa-eye text-primary mr-1"></i>View Detail
                            </a>
                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
            
            
           
           
          
        </div>
    </div>
    <!-- Books End -->


    <!-- Subscribe Start -->

    <!-- Subscribe End -->


    <!-- Books Start -->
    <div class="container-fluid offer pt-5">
        <div class="row px-xl-5">
            <div class="col-md-6 pb-4">
                <div class="position-relative bg-secondary text-center text-md-left text-white mb-2 py-5 px-5">
                    <img src="img/" alt="">
                    <div class="position-relative" style="z-index: 1;">
                        <h5 class="text-uppercase text-primary mb-3">20% off the all order</h5>
                        <h1 class="mb-4 font-weight-semi-bold">Winter Favourites Coming Soon</h1>
                        <a href="" class="btn btn-outline-primary py-md-2 px-md-3">Winter Drop Soon</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">New-Picks</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            <% books.slice(6,12).forEach(function(book) { %> <!-- Limit to the first 6 books -->
                <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <% if (book.images && book.images.length > 0) { %>
                                <!-- Display the first image from the 'images' array with appropriate styling -->
                                <img class="img-fluid w-100" src="/uploads/<%= book.images[0].split('/').pop() %>" alt="Book Image">
                            <% } else { %>
                                <!-- Placeholder image if no images are available -->
                                <img class="img-fluid w-100" src="/path/to/placeholder.jpg" alt="Placeholder Image">
                            <% } %>
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3"><%= book.title %></h6>
                            <p><%= book.author %></p>
                            
                            <div class="d-flex justify-content-center">
                                <h6>$<%= book.regularPrice %></h6><h6 class="text-muted ml-2"><del>$<%= book.salesPrice %></del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/book/<%= book._id %>" class="btn btn-sm text-dark p-0">
                                <i class="fas fa-eye text-primary mr-1"></i>View Detail
                            </a>
                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
              
            
           
           
        </div>
    </div>

        }

        try {
            const response = await fetch('/cart/apply-coupon', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ couponCode: selectedCoupon })
            });

            const result = await response.json();

            if (!response.ok) {
                Swal.fire("Error", result.message, "error");
                return;
            }

            // Update all cart values dynamically
            document.getElementById("subt").innerText = `₹${result.subtotal.toFixed(2)}`;
            document.getElementById("cartTotal").innerText = `₹${result.total.toFixed(2)}`;
            
            // Update discount display
            const discountRow = document.getElementById("discountRow");
            const discountAmount = document.getElementById("discountAmount");
            
            if (result.discountAmount > 0) {
                discountAmount.innerText = `-₹${result.discountAmount.toFixed(2)}`;
                discountRow.style.display = "flex";
            } else {
                discountRow.style.display = "none";
            }

            // Show success message
            Swal.fire({
                title: "Success",
                text: "Coupon applied successfully!",
                icon: "success",
                confirmButtonText: "OK"
            });

        } catch (error) {
            console.error("Error applying coupon:", error);
            Swal.fire("Error", "An error occurred while applying the coupon.", "error");
        }
    };
    async function removeCoupon() {
        try {
            const response = await fetch("/cart/remove-coupon", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
            });

            const data = await response.json();

            if (response.ok) {
                // Update all cart values
                document.getElementById("subt").innerText = `₹${data.subtotal.toFixed(2)}`;
                document.getElementById("cartTotal").innerText = `₹${data.total.toFixed(2)}`;
                
                // Hide discount row
                document.getElementById("discountRow").style.display = "none";
                
                // Clear coupon UI elements
                document.getElementById("appliedCouponMessage").innerText = "";
                document.getElementById("couponSelect").value = "";
                
                Swal.fire("Success", "Coupon removed successfully!", "success");
            } else {
                Swal.fire("Error", data.message, "error");
            }
        } catch (error) {
            console.error("Error:", error);
            Swal.fire("Error", "Failed to remove coupon.", "error");
        }
    }

</script>

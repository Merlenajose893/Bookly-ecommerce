  <script>
    document.addEventListener("DOMContentLoaded", function () {
    const btnPlus = document.querySelectorAll('.btn-plus');
    const btnMinus = document.querySelectorAll('.btn-minus');
    const quantityInputs = document.querySelectorAll('.form-control');

    function safeGetNumber(element, defaultValue = 0) {
        if (!element) return defaultValue;
        const text = element.textContent.replace(/[^\d.-]/g, '');
        const number = parseFloat(text);
        return isNaN(number) ? defaultValue : number;
    }
console.log(quantityInputs);

    function handleQuantityChange(input) {
        if (!input) return;
        
        let quantity = parseInt(input.value) || 1;
        // quantity += change;

        if (quantity > 5) {
            quantity = 5;
            Swal.fire({
                icon: 'warning',
                title: 'Limit Reached',
                text: 'You can add a maximum of 5 items per product.',
                confirmButtonText: 'OK'
            });
        }
// if(quantity>quantityInputs)
        quantity = Math.max(1, quantity); // Ensure minimum 1
        input.value = quantity;

        updatePriceAndCart(input);
    }

    async function updatePriceAndCart(input) {
        if (!input) return;

        const row = input.closest('tr');
        if (!row) return;

        const removeBtn = row.querySelector('.remove-item');
        if (!removeBtn) {
            console.error('Remove button not found');
            return;
        }

        const productId = removeBtn.dataset.id;
        const priceCell = row.querySelector('td:nth-child(2)');
        const totalPriceCell = row.querySelector('td:nth-child(4)');

        if (!priceCell || !totalPriceCell) {
            console.error('Price cells not found');
            return;
        }

        const price = safeGetNumber(priceCell);
        let quantity = parseInt(input.value) || 1;

        // Update UI
        const totalPrice = (price * quantity).toFixed(2);
        totalPriceCell.textContent = `₹${totalPrice}`;

        try {
            const response = await fetch('/cart/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, quantity })
            });
console.log('Response',response);

            // if (!response.ok) {
            //     throw new Error(`HTTP error! status: ${response.status}`);
            // }

            const data = await response.json();
            console.log(data);
            

            if (data.success) {
                updateCartSummary(data.cart);
                // window.location.reload('/cart');
            } else {
                Swal.fire({
                icon: 'warning',
                title: 'Stock Limit Reached',
                text: data.message, // "Only X items are in stock. You cannot add more."
                confirmButtonText: 'OK'
            });
            if(data.availableStock){

                input.value=data.availableStock;
                // console.log(input.value);
                
            }
            return
            }
        } catch (error) {
            console.error("Error updating cart:", error);
            
            Swal.fire({
                icon: 'error',
                title: 'Error Updating Cart',
                text: error.message || 'An unexpected error occurred while updating the cart.',
                confirmButtonText: 'Retry',
                showCancelButton: true,
                cancelButtonText: 'Reload Page'
            }).then((result) => {
                if (result.isConfirmed) {
                    updatePriceAndCart(input);
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    location.reload('/cart');
                }
            });
        }
    }

    function updateCartSummary(cart) {
        if (!cart) return;

        const subtotalElement = document.querySelector('.card-body span:nth-child(2)');
        // const discountElement = document.querySelector('.discount');
        const totalElement = document.querySelector('.card-body .fw-bold:last-child');

        if (subtotalElement && totalElement ) {
            console.log(cart,'Dtaa');
            
            
            const subtotal=cart.subTotal??0
            console.log(subtotal,'jjjj');
            subtotalElement.textContent = `₹${cart.subTotal.toFixed(2)}`;
            // discountElement.textContent = `₹${cart.discountAmount.toFixed(2)}`;
            totalElement.textContent = `₹${(cart.subTotal + 50).toFixed(2)}`;
             // Assuming ₹50 shipping
        }
    }

    // Event Listeners
    btnPlus.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const input = this.closest('tr')?.querySelector('.form-control');
            handleQuantityChange(input, 1);
        });
    });

    btnMinus.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const input = this.closest('tr')?.querySelector('.form-control');
            handleQuantityChange(input, -1);
        });
    });

    quantityInputs.forEach(input => {
        input.addEventListener('change', function() {
            handleQuantityChange(this, 0);
        });

        input.addEventListener('input', function() {
            let value = this.value.replace(/[^\d]/g, '');
            value = value ? Math.min(5, Math.max(1, parseInt(value))) : 1;
            this.value = value;
        });
    });

    updateCartSummary();
});

  </script>
